{
  "name": "developer-portal-turborepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenvx run --env-file=.env.local --env-file=.env -- turbo run build",
    "dev": "dotenvx run --env-file=.env.local --env-file=.env -- turbo run dev --no-daemon",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "npm exec --workspaces -- shx rm -rf node_modules .next .turbo coverage dist compiled build-next-static build-storybook-static && shx rm -rf node_modules && shx echo Done!",
    "remove-turbo-cache": "shx rm -rf ./node_modules/.cache/turbo",
    "update-dependencies": "turbo update-dependencies && npx npm-check-updates -u"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-custom": "*",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "latest",
    "sc-changelog": "*",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "turbo": "^1.12.5",
    "ui": "*"
  },
  "packageManager": "npm@9.5.0^",
  "dependencies": {
    "@dotenvx/dotenvx": "^0.26.0"
  }
}
